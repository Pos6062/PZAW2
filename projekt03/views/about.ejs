  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: Arial, Helvetica, sans-serif;
    }

    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #eef1f5, #f9fafb);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    main {
      background: #ffffff;
      max-width: 700px;
      padding: 2.2rem;
      border-radius: 12px;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }

    h1 {
      margin-bottom: 1.2rem;
      text-align: center;
      color: #222;
      font-size: 2rem;
    }

    p {
      line-height: 1.7;
      color: #555;
      font-size: 1rem;
      text-align: justify;
      margin-bottom: 2rem;
    }

    a {
      display: inline-block;
      text-decoration: none;
      padding: 0.6rem 1.4rem;
      border-radius: 8px;
      background: #0066cc;
      color: #ffffff;
      font-weight: bold;
      transition: background 0.2s ease, transform 0.1s ease;
    }

    a:hover {
      background: #0052a3;
      transform: translateY(-1px);
    }
  </style>
</head>

